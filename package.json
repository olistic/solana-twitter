{
  "name": "solana-twitter",
  "version": "0.0.1",
  "description": "Twitter clone built on Solana.",
  "repository": "https://github.com/olistic/solana-twitter.git",
  "author": "Matias Olivera <moliverafreire@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "lint": "eslint --cache --ext .js web/src/* && prettier --check \"web/src/**/*.js\"",
    "lint:fix": "eslint --cache --ext .js web/src/* --fix && prettier --write \"web/src/**/*.js\"",
    "build:program": "anchor build",
    "clean:program": "cargo clean --manifest-path=Cargo.toml && rm -rf target",
    "deploy:program": "anchor deploy",
    "start": "yarn workspace @solana-twitter/web start"
  },
  "devDependencies": {
    "@project-serum/anchor": "^0.20.1",
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.7",
    "mocha": "^9.1.3",
    "prettier": "2.5.1"
  },
  "workspaces": [
    "web"
  ]
}
