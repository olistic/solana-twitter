{
  "name": "solana-react-starter",
  "version": "0.0.1",
  "description": "Boilerplate for a web3 app built with Solana and React.js.",
  "repository": "https://github.com/olistic/solana-react-starter.git",
  "author": "Matias Olivera <moliverafreire@gmail.com>",
  "license": "UNLICENSED",
  "private": true,
  "scripts": {
    "lint": "eslint --cache --ext .js web/src/* && prettier --check \"web/src/**/*.js\"",
    "lint:fix": "eslint --cache --ext .js web/src/* --fix && prettier --write \"web/src/**/*.js\"",
    "build:program": "cargo build-bpf --manifest-path=program/Cargo.toml --bpf-out-dir=program/dist",
    "clean:program": "cargo clean --manifest-path=program/Cargo.toml && rm -rf program/dist",
    "deploy:program": "solana program deploy program/dist/starter.so",
    "start": "yarn workspace @solana-react-starter/web start",
    "postinstall": "cargo update --manifest-path=program/Cargo.toml"
  },
  "devDependencies": {
    "eslint": "^7.32.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.1.5",
    "prettier": "2.5.1"
  },
  "workspaces": [
    "web"
  ]
}
